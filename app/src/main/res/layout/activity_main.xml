<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B4D8E8"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="296dp"
        android:layout_height="65dp"
        android:layout_marginBottom="68dp"
        android:background="#A7DDF6"
        android:fontFamily="@font/im_fell_great_primer_sc"
        android:onClick="editData"
        android:text="Modify Data"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.593"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        app:layout_constraintVertical_bias="0.843" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="349dp"
        android:layout_height="140dp"
        android:background="#F8F8F8"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.556">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/im_fell_great_primer_sc"
                android:text="Amount"
                android:textAlignment="viewStart"
                android:textColor="#651FFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Amount"
                android:layout_width="155dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/im_fell_great_primer_sc"
                android:textAlignment="center"
                android:textColor="#651FFF"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/im_fell_great_primer_sc"
                android:text="Years"
                android:textAlignment="textStart"
                android:textColor="#368C00"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="73dp"
                tools:layout_editor_absoluteY="137dp" />

            <TextView
                android:id="@+id/Years"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/im_fell_great_primer_sc"
                android:textAlignment="center"
                android:textColor="#368C00"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/im_fell_great_primer_sc"
                android:text="Interest Rate"
                android:textAlignment="viewStart"
                android:textColor="#003A9C"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/InterestRate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/im_fell_great_primer_sc"
                android:textAlignment="center"
                android:textColor="#003A9C"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/im_fell_great_primer_sc"
                android:text="Monthly Payment"
                android:textAlignment="viewStart"
                android:textColor="#007874"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/MonthlyPayment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/im_fell_great_primer_sc"
                android:textAlignment="center"
                android:textColor="#007874"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="186dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/im_fell_great_primer_sc"
                android:text="Total Payment"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TotalPayment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/im_fell_great_primer_sc"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="24sp" />

        </TableRow>

    </TableLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="340dp"
        android:layout_height="145dp"
        android:layout_marginTop="16dp"
        android:background="#92BDD1"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="202dp"
            android:layout_height="64dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="9dp"
            android:background="#A7DDF6"
            android:fontFamily="@font/im_fell_great_primer_sc"
            android:foregroundTint="#FA1A1A"
            android:shadowColor="#FB0808"
            android:text="Mortgage"
            android:textAlignment="center"
            android:textColor="#090909"
            android:textSize="30sp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toTopOf="@+id/textView10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.043"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.428" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="201dp"
            android:layout_height="55dp"
            android:background="#A7DDF6"
            android:fontFamily="@font/im_fell_great_primer_sc"
            android:text="Calculator"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.956"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.944" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>